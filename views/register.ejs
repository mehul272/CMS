<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/admin_login.css">
    <title>Sign-in to CMS</title>
</head>

<body>

    <header>
        <img class="logo" src="logo1.JPG" alt="logo">
        <input class="menu-btn" type="checkbox" id="menu-btn" />
        <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
        <ul class="menu">
            <li><a href="/" class="but">Homepage</a></li>
        </ul>
    </header>

    <div class="admin">


        <div class="container" id="container">

            <div class="form-container sign-up-container">
                <form action="/register" method="POST">
                    <h1>Create New Account</h1>
                    <br>
                    <span>Use your email for registration</span>
                    <!-- <input type="text" placeholder="Name" /> -->
                    <!-- <input type="email" placeholder="Email" /> -->
                    <input type="email" class="form-control" name="email_id" placeholder="Enter your Email ID" required>
                    <input type="text" class="form-control" name="first_name" placeholder="First Name" required>
                    <input type="text" class="form-control" name="last_name" placeholder="Last Name" required>
                    <input type="text" class="form-control" name="teacher_id" placeholder="Enter Teacher ID" required>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                    <input type="password" class="form-control" name="cpassword" placeholder="Confirm Password" required>
                    <!-- <input type="password" placeholder="Password" /> -->
                    <!-- <button>Sign Up</button> -->
                    <button type="submit" class="btn btn-dark">Register</button>
                </form>

            </div>

            <div class="form-container sign-in-container">
                <form action="/login" method="POST">
                    <h1>Sign in</h1>
                    <br>
                    <span>Use your college id for authentication</span>
                    <!-- <input type="email" placeholder="Email" /> -->
                    <input type="email" class="form-control" name="username" placeholder="Email" required>
                    <!-- <input type="password" placeholder="Password" /> -->
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                    <a href="forgotpassword">Forgot your password?</a>
                    <button type="submit" class="btn btn-dark">Login</button>
                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Teacher Sign-up</h1>
                        <p>To keep connected with us please login with your personal info</p>
                        <button class="ghost" id="signIn">Sign-in</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Teacher Sign-in</h1>
                        <p>New user? Register with us</p>
                        <button class="ghost" id="signUp">Sign-up</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });
    </script>



</body>

</html>