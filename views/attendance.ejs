<body>

    <header>
        <img class="logo" src="logo1.JPG" alt="logo">
        <input class="menu-btn" type="checkbox" id="menu-btn" />
        <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
        <ul class="menu">
            <!-- <li><a href="home.html" class="but">Sign-out</a></li> -->
            <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
        </ul>
    </header>


    <div class="student"><br><br>

        <nav style="position: relative; left: -2rem; margin-top: 7rem;">
            <ul>
                <a href="/open_home">
                    <li style="padding: 1rem;">
                        <img style="width: 2.5rem;" src="home.png" alt="home">
                    </li>
                </a>
                <a href="/profile_teacher">
                    <li style="padding: 1rem;">
                        <img style="width: 2.5rem;" src="user.png" alt="user">
                    </li>
                </a>
                <a href="/marks">
                    <li style="padding: 1rem;">
                        <img style="width: 2.5rem;" src="medical-results.png" alt="result">
                    </li>
                </a>
                <a href="/add_mark">
                    <li style="padding: 1rem;">
                        <img style="width: 2.5rem;" src="check_mark_006.jpg" alt="result">
                    </li>
                </a>
                <a href="/attendance">
                    <li style="padding: 1rem; background-color: aliceblue;">
                        <img style="width: 2.5rem;" src="calendar (1).png" alt="attendance">
                    </li>
                </a>
            </ul>
        </nav>


        <div class="container">

            <h1 class="my-h1">
                Student Attendance
            </h1>
            <a href="/add" class="btn btn-sm btn-primary">Add Student</a>
            <br>


            <table class="table table-dark table-striped my-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>PRN</th>
                        <th>Present Days</th>
                        <th>Total Days</th>
                        <th>Last Date Marked</th>
                        <th>Mark Attendance</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user){ %>
                        <tr>
                            <td>
                                <%= user.PRN %>
                            </td>
                            <td>
                                <%= user.first_name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.PRN %>
                            </td>
                            <td>
                                <%= user.present_days %>
                            </td>
                            <td>
                                <%= user.total_days %>
                            </td>
                            <td>
                                <%= user.date_registered %>
                            </td>
                            <td>
                                <a href="present/<%= user.PRN %>" class="btn-pr">Present</a>
                                <a href="absent/<%= user.PRN %>" class="btn-ab">Absent</a>
                                <!-- <a href="edit/<%= user.id %>" class="btn btn-sm btn-primary">Edit</a> -->


                            </td>
                            <td>
                                <a href="delete/<%= user.PRN %>" class="btn btn-sm btn-danger btn-del">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>






        </div>



    </div>



